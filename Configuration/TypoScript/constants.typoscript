plugin.tx_filecollectiongallery {
  view {
    # cat=plugin.tx_filecollectiongallery/file; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.templates
    templateRootPath = EXT:filecollection_gallery/Resources/Private/Templates/
    # cat=plugin.tx_filecollectiongallery/file; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.partials
    partialRootPath = EXT:filecollection_gallery/Resources/Private/Partials/
    # cat=plugin.tx_filecollectiongallery/file; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.layouts
    layoutRootPath = EXT:filecollection_gallery/Resources/Private/Layouts/
  }

  settings {

    mobile {

      image {
        # cat=plugin.tx_filecollectiongallery/mobile/a; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.width
        maxWidth = 700
      }

    }

    desktop {

      preview {

        image {
          # cat=plugin.tx_filecollectiongallery/desktop-preview/a; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.width
          width = 700c
          # cat=plugin.tx_filecollectiongallery/desktop-preview/b; type=string; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.height
          height = 700c
        }

      }

    }

    # cat=plugin.tx_filecollectiongallery/download/b; type=boolean; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.download_button
    downloadButton = 1


    lightbox {
      # cat=plugin.tx_filecollectiongallery/lightbox/a; type=int+; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.maxWidth
      maxWidth = 2000
      # cat=plugin.tx_filecollectiongallery/lightbox/b; type=int+; label=LLL:EXT:filecollection_gallery/Resources/Private/Language/locallang_be.xlf:config.maxHeight
      maxHeight = 1000
    }

  }
}
