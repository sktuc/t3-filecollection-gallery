plugin.tx_filecollectiongallery {
  view {
    templateRootPaths {
      0 = EXT:filecollection_gallery/Resources/Private/Templates/
      10 = {$plugin.tx_filecollectiongallery.view.templateRootPath}
    }

    partialRootPaths {
      0 = EXT:filecollection_gallery/Resources/Private/Partials/
      5 = EXT:fluid_styled_content/Resources/Private/Partials/
      10 = {$plugin.tx_filecollectiongallery.view.partialRootPath}
    }

    layoutRootPaths {
      0 = EXT:filecollection_gallery/Resources/Private/Layouts/
      10 = {$plugin.tx_filecollectiongallery.view.layoutRootPath}
    }

  }

  settings {

    media < lib.contentElement.settings.media

    mobile {
      image {
        maxWidth = {$plugin.tx_filecollectiongallery.settings.mobile.image.maxWidth}
      }
    }

    desktop {
      preview {
        image {
          width = {$plugin.tx_filecollectiongallery.settings.desktop.preview.image.width}
          height = {$plugin.tx_filecollectiongallery.settings.desktop.preview.image.height}
        }
      }
    }

    downloadButton = {$plugin.tx_filecollectiongallery.settings.downloadButton}

    lightbox {
      maxWidth = {$plugin.tx_filecollectiongallery.settings.lightbox.maxWidth}
      maxHeight = {$plugin.tx_filecollectiongallery.settings.lightbox.maxHeight}
    }

  }
}

